<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
  <% if params[:action] == "edit" %>
  <%= f.label "Completed" %> <br />
  <%= f.check_box :completed %> <br />
  <% end %>
<% end %>
